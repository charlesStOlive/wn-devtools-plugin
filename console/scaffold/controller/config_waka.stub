modelClass: {{ plugin_namespace }}\Models\{{ studly_model }}
backendUrl: {{ controller_url }}

workflow: {% if has_workflow %}true{% else %}false{% endif %} 

{% if has_productor %}
productor:
    permissions: {{ plugin_id }}::*.{{ lower_model }}.*
    drivers: 
